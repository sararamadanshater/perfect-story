
<html>
    <head>
    
    <link href="../uploaded/css/bootstrap.min.css" rel="stylesheet">
    <link href="../uploaded/css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="../uploaded/css/all.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <title>dashboard</title>
    </head>
    
    <body>



      <%- include('adminheader.ejs',{data:data}); %>
      <div class="py-3 col-md-9">
 
        <h1>Product</h1>
        <!-- <div class="m-auto d-flex justify-content-center ">
     -->
        <table class="table table-striped" >
            <thead>
              
              <tr>
                <th scope="col">ProductCode</th>
                <th scope="col">Name</th>
                <th scope="col">category</th>
                <th scope="col">Description</th>
                <th scope="col">Price</th>
                <th scope="col">Image </th>
                <th scope="col">action</th>
              </tr>
            </thead>
            <% if(order.length){ for(let i=0;i < order.length;i++) { %>   
              <tbody>
                <tr>
                  <th scope="row"><%= order[i].id  %> </th>
                  <td><%= order[i].product_name%></td>
                  <td><%= order[i].category %></td>
                  <td><%= order[i].product_description %></td>
                  <td><%= order[i].product_price %></td>
                  <td> <img src="/uploaded/images/products/<%= order[i].image %>" width="40px" height="25px" > </td>
                  
                  <td><a class="btn btn-info mx-2" onclick="Edit('<%- order[i].id %>')" href="/editproduct?id= <%= order[i].id  %>">Edit</a><button class="btn btn-danger" onclick="Delete('<%- order[i].id %>')" >Delete</button></td>
                </tr>
          
                  
              </tbody>
              
              <% } }%>
           
      
          </table>
        </div>
</div>







<script src="../uploaded/js/jquery-3.3.1.slim.min.js"></script>
<script src="../uploaded/public/js/popper.min.js"></script>
<script src="../uploaded/public/js/bootstrap.min.js"></script>
<script src="../uploaded/public/js/mine.js"></script>
<script src="/uploaded/js/edit.js"></script>


</body>
</html>